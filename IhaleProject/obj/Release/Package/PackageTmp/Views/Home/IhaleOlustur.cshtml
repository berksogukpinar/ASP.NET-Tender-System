@model IhaleProject.Models.Ihale

@{
    ViewBag.Title = "IhaleOlustur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align:center;margin-bottom:40px;">İhale Oluştur</h2>

@using (Html.BeginForm("IhaleOlustur", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="container" style="text-align:center">
            <div class="form-group">
                <label class="form-label">Ihalenin İsmi</label> <br />
                <input pattern=".{3,50}" title="En fazla 50 karakter" required style="text-align: center; align-items: center; margin: auto; " class="form-control" type="text" name="IhaleName" />
            </div>

            <div class="form-group">
                <label class="form-label">Miktar</label> <br />
                <input pattern=".{3,15}" title="En fazla 50 karakter" required style="text-align: center; align-items: center; margin: auto; " class="form-control"  min="1" type="number" name="IhaleAdet" />
            </div>

            <div class="form-group">
                <label class="form-label">Cins</label> <br />
                <select required id="cins" name="IhaleAdetCins">
                    <option value="Adet">Adet</option>
                    <option value="Metre">Metre</option>
                    <option value="Santimetre">Santimetre</option>
                    <option value="Kg">Kilogram</option>
                    <option value="Gram">Gram</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Ihaleye ait döküman</label> <br />
                <input style="text-align: center; align-items: center; margin: auto; " class="form-control" type="file" name="IhaleImage" />
            </div>

            <div class="form-group">
                <label class="form-label">Ihalenin Sonlanacağı Tarih  </label> <br />
                <input style="text-align: center; align-items: center; margin: auto; " class="form-control" type="datetime-local" name="IhaleLastTime" />
            </div>

            <div class="form-group">
                <div class="text-center">
                    <button style="text-align: center; align-items: center; margin: auto; " type="submit" class="btn btn-start-order">Ihale oluştur</button>
                </div>
            </div>
        </div>
    </div>
}